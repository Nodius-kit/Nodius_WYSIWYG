{
  "name": "@nodius/editor",
  "version": "0.1.0",
  "type": "module",
  "description": "Zero-dependency WYSIWYG editor framework â€” plugin-based, collaboration-ready",
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./styles": "./dist/editor.css"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:stress": "vitest run tests/stress",
    "typecheck": "tsc --noEmit",
    "playground": "vite --config playground/vite.config.ts"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^3.0.0",
    "jsdom": "^25.0.0"
  },
  "license": "MIT"
}
